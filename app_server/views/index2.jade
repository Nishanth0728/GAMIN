doctype html
html
  head
    title= title
    link(href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap", rel="stylesheet")
    link(rel='stylesheet', href='/stylesheets/navbar.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css')
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css')
    script(src='https://code.jquery.com/jquery-3.5.1.min.js')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.min.js')
  body
    // Navbar section
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container
        a.navbar-brand(href='/') GAMIN
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarNav
          ul.navbar-nav.ml-auto
            li.nav-item
              a.nav-link(href='/games') Games
            li.nav-item
              a.nav-link(href='/about') About
            li.nav-item
              a.nav-link(href='/vlogs') Vlogs
            li.nav-item
              a.nav-link(href='/signin') Signout
    extends layout
    block content
      link(href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap", rel="stylesheet")
      link(rel="stylesheet", href="/stylesheets/style.css")
      .video-background
        video(autoplay, muted, loop)
          source(src='/videos/video1.mp4', type='video/mp4')
        .overlay-container
          .overlay
            h1 GAMIN
            h2 Welcome to GAMIN - Your Ultimate Gaming Hub!
            a(href='/signin', class='letsgobutton btn btn-primary') Let's Go!
