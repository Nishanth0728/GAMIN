    .video-slider
      .slider-container
        video.controls(controls, src='/videos/clip1.mp4')
        video.controls(controls, src='/videos/clip2.mp4')
        video.controls(controls, src='/videos/clip3.mp4')
        video.controls(controls, src='/videos/clip4.mp4')
        video.controls(controls, src='/videos/clip5.mp4')

      .slider-nav
        button.prev Previous
        button.next Next

    script.
      let slideIndex = 0;
      const slides = document.querySelectorAll('.slider-container video');

      function showSlides() {
        for (let i = 0; i < slides.length; i++) {
          slides[i].style.display = 'none';  
        }

        slides[slideIndex].style.display = 'block';  
        slides[slideIndex].play(); // Start playing the new video
      }

      function nextSlide() {
        slides[slideIndex].pause(); // Pause the current video
        slideIndex++;
        if (slideIndex >= slides.length) { slideIndex = 0; } // Loop to the first video
        showSlides();
      }

      function prevSlide() {
        slides[slideIndex].pause(); // Pause the current video
        slideIndex--;
        if (slideIndex < 0) { slideIndex = slides.length - 1; } // Loop back to the last video
        showSlides();
      }

      // Set event listeners for each video to trigger the next slide when the video ends
      slides.forEach((video) => {
        video.addEventListener('ended', nextSlide); // Move to the next slide when video ends
      });

      // Initially show the first video and play it
      showSlides();

      // Add event listeners for the navigation buttons
      document.querySelector('.slider-nav button.next').addEventListener('click', nextSlide);
      document.querySelector('.slider-nav button.prev').addEventListener('click', prevSlide);
